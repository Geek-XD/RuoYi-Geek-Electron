{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["electron-vite/node"],
    "paths": {
      "@main/*": [
        "src/main/*"
      ],
      "@preload/*": [
        "src/preload/*"
      ],
      "@resources/*":[
        "resources/*"
      ]
    }
  }
}
